<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@mipmap/bg_theme">

    <include
        android:id="@+id/layoutHead"
        layout="@layout/layout_head_transparent"/>

    <ScrollView
        style="@style/MatchMatch"
        android:layout_below="@id/layoutHead"
        android:scrollbars="none">

        <LinearLayout
            style="@style/MatchMatch"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/y200"
                android:layout_marginTop="@dimen/y60"
                android:src="@mipmap/logo_default" />

            <LinearLayout
                style="@style/MatchWrap"
                android:layout_marginLeft="@dimen/x60"
                android:layout_marginRight="@dimen/x60"
                android:layout_marginTop="@dimen/y60"
                android:background="@drawable/common_rectangle_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y110"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/x60"
                        android:layout_height="@dimen/y60"
                        android:layout_marginLeft="@dimen/x25"
                        android:src="@mipmap/icon_login_user"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x10"
                        android:textColor="@color/TC_WHITE"
                        android:textColorHint="@color/TC_WHITE_HINT"
                        android:hint="@string/hint_mobile"
                        android:background="@null"
                        android:textSize="@dimen/x35"
                        android:textStyle="bold"/>

                </LinearLayout>

                <View style="@style/line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y110"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/x60"
                        android:layout_height="@dimen/y60"
                        android:layout_marginLeft="@dimen/x25"
                        android:src="@mipmap/icon_login__lock"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x10"
                        android:textColor="@color/TC_WHITE"
                        android:textColorHint="@color/TC_WHITE_HINT"
                        android:hint="@string/hint_password"
                        android:background="@null"
                        android:textSize="@dimen/x35"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                style="@style/BtnLongGreen"
                android:layout_marginTop="@dimen/y80"
                android:text="@string/btn_login"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/TC_WHITE"
                android:layout_marginTop="@dimen/y60"
                android:layout_centerInParent="true"
                android:textSize="@dimen/x30"
                android:text="@string/btn_forget"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>