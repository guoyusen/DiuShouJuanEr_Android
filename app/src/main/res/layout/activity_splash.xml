<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch"
    android:background="@mipmap/bg_theme">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y200"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y200"
        android:src="@mipmap/logo_default" />

    <com.bili.diushoujuaner.ui.RevealTextView
        android:id="@+id/textSlogon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slogon"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/x5"
        android:textColor="@color/TC_WHITE"
        android:textSize="@dimen/x40"
        android:textStyle="italic"
        app:rtv_duration="2000"
        android:layout_marginTop="@dimen/y100"
        android:layout_below="@+id/ivLogo"/>

</RelativeLayout>