<resources>

    <style name="WrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/TRANSPARENT</item>
    </style>

    <style name="SplashTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TranslucentStatus" parent="MatchMatch">
        <item name="android:clipToPadding">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@color/COLOR_WHITE</item>
    </style>

    <style name="Btn">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/COLOR_WHITE</item>
        <item name="android:textSize">@dimen/x40</item>
        <item name="android:layout_height">@dimen/y100</item>
    </style>

    <style name="BtnLong" parent="Btn">
        <item name="android:layout_marginLeft">@dimen/x60</item>
        <item name="android:layout_marginRight">@dimen/x60</item>
    </style>

    <style name="BtnLongGreen" parent="BtnLong">
        <item name="android:background">@drawable/btn_green_selector</item>
    </style>

    <style name="TextSmall">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/x30</item>
    </style>

    <style name="TextMiddle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/x35</item>
    </style>

    <style name="TextBig">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/x40</item>
    </style>
    
    <style name="NavBtnText" parent="TextMiddle">
        <item name="android:textColor">@color/COLOR_WHITE</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingLeft">@dimen/x16</item>
        <item name="android:paddingRight">@dimen/x16</item>
    </style>

    <style name="NavTitleText" parent="TextBig">
        <item name="android:textColor">@color/COLOR_WHITE</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingLeft">@dimen/x30</item>
        <item name="android:paddingRight">@dimen/x30</item>
    </style>

    <style name="menu_item_icon">
        <item name="android:layout_width">@dimen/x54</item>
        <item name="android:layout_height">@dimen/y54</item>
        <item name="android:layout_marginLeft">@dimen/x16</item>
    </style>
    <style name="menu_item_text" parent="TextMiddle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/x16</item>
        <item name="android:textColor">@color/TC_333333</item>
    </style>

</resources>
