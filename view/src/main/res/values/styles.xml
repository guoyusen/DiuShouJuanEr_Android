<resources>

    <style name="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/TRANSPARENT</item>
    </style>

    <style name="FullScreenTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 页面根布局使用，在布局中使用fitsSystemWindows=true属性，保证Toast不会便宜 -->
    <style name="MatchMatch.FitWindow">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="MatchWrap.MarginHorizontal">
        <item name="android:layout_marginLeft">@dimen/x24</item>
        <item name="android:layout_marginRight">@dimen/x24</item>
    </style>

    <style name="MatchMatch.MarginHorizontal">
        <item name="android:layout_marginLeft">@dimen/x24</item>
        <item name="android:layout_marginRight">@dimen/x24</item>
    </style>


    <!-- 次根布局使用，限制统一边距 -->
    <style name="MarginHorizontal">
        <item name="android:layout_marginLeft">@dimen/x24</item>
        <item name="android:layout_marginRight">@dimen/x24</item>
    </style>

    <style name="TextSmall">
        <item name="android:textSize">@dimen/x26</item>
    </style>

    <style name="TextMiddle">
        <item name="android:textSize">@dimen/x30</item>
    </style>

    <style name="TextLarge">
        <item name="android:textSize">@dimen/x34</item>
    </style>

    <style name="TextXLarge">
        <item name="android:textSize">@dimen/x38</item>
    </style>

    <style name="Btn" parent="TextLarge">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/COLOR_WHITE</item>
        <item name="android:layout_height">@dimen/y100</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="BtnLong" parent="Btn">
        <item name="android:layout_marginLeft">@dimen/x60</item>
        <item name="android:layout_marginRight">@dimen/x60</item>
    </style>

    <style name="BtnXLong" parent="Btn">
        <item name="android:layout_marginLeft">@dimen/x24</item>
        <item name="android:layout_marginRight">@dimen/x24</item>
    </style>

    <style name="BtnLongGreen" parent="BtnLong">
        <item name="android:background">@drawable/btn_green_selector</item>
    </style>

    <style name="BtnXLongBlue" parent="BtnXLong">
        <item name="android:background">@drawable/btn_blue_selector</item>
    </style>

    <style name="BtnXLongRed" parent="BtnXLong">
        <item name="android:background">@drawable/btn_red_selector</item>
    </style>

    <style name="TextNavRight" parent="TextMiddle">
        <item name="android:textColor">@color/COLOR_WHITE</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingLeft">@dimen/x24</item>
        <item name="android:paddingRight">@dimen/x24</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextNavTitle" parent="TextLarge">
        <item name="android:textColor">@color/COLOR_WHITE</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingLeft">@dimen/x45</item>
        <item name="android:paddingRight">@dimen/x45</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 底部导航栏：图标，文字 -->
    <style name="main_tab_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:background">@color/TRANSPARENT</item>
    </style>

    <style name="main_tab_btn" parent="TextSmall">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">@dimen/x15</item>
        <item name="android:paddingRight">@dimen/x15</item>
        <item name="android:background">@color/TRANSPARENT</item>
    </style>

    <style name="menu_item_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y120</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="menu_item_icon">
        <item name="android:layout_width">@dimen/x54</item>
        <item name="android:layout_height">@dimen/y54</item>
        <item name="android:layout_marginLeft">@dimen/x24</item>
    </style>

    <style name="menu_item_text" parent="TextMiddle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/x40</item>
        <item name="android:layout_marginRight">@dimen/x24</item>
        <item name="android:textColor">@color/TC_333333</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/x2</item>
        <item name="android:background">@color/LC_F6F6F6</item>
    </style>

    <style name="Custom_Progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="menu_item_icon_user">
        <item name="android:layout_width">@dimen/x54</item>
        <item name="android:layout_height">@dimen/y54</item>
        <item name="android:layout_marginLeft">@dimen/x24</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="menu_item_content_user">
        <item name="android:textSize">@dimen/x30</item>
        <item name="android:layout_marginLeft">@dimen/x152</item>
        <item name="android:layout_height">@dimen/y72</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/TC_333333</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="menu_item_edt_user" parent="menu_item_content_user">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/x24</item>
        <item name="android:textColorHint">@color/TC_ADADBB</item>
        <item name="android:enabled">false</item>
        <item name="android:background">@null</item>
    </style>

    <style name="menu_item_txt_user" parent="menu_item_content_user">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColorHint">@color/TC_ADADBB</item>
    </style>

    <style name="icon_arrow_right">

    </style>

</resources>
