<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch.FitWindow"
    android:background="@color/COLOR_WHITE"
    android:orientation="vertical">

    <include
        android:id="@+id/layoutHead"
        layout="@layout/include_head_custom" />

    <com.bili.diushoujuaner.widget.scrollview.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x24">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/guoyusen"
                    android:layout_width="@dimen/x200"
                    android:layout_height="@dimen/x200"
                    app:roundAsCircle="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/x108"
                    android:textColor="@color/TC_8A8A8A"
                    android:layout_alignParentRight="true"
                    android:text="三木同学"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y48"
                android:textSize="@dimen/x200"
                android:textColor="@color/TC_040404"
                android:text="帅！"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y48"
                android:textSize="@dimen/x82"
                android:textColor="@color/TC_8A8A8A"
                android:text="的不要不要的..."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y48"
                android:textSize="@dimen/x82"
                android:textColor="@color/TC_8A8A8A"
                android:text="不要不要的..."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y48"
                android:textSize="@dimen/x82"
                android:textColor="@color/TC_8A8A8A"
                android:text="要不要的..."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y48"
                android:textSize="@dimen/x82"
                android:textColor="@color/TC_8A8A8A"
                android:text="不要的..."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y48"
                android:textSize="@dimen/x82"
                android:textColor="@color/TC_8A8A8A"
                android:text="要的..."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y48"
                android:textSize="@dimen/x82"
                android:textColor="@color/TC_8A8A8A"
                android:text="的..."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y48"
                android:textSize="@dimen/x82"
                android:textColor="@color/TC_8A8A8A"
                android:text="..."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y48"
                android:textSize="@dimen/x82"
                android:textColor="@color/TC_8A8A8A"
                android:text="就是任性。。。"/>

        </LinearLayout>

    </com.bili.diushoujuaner.widget.scrollview.ReboundScrollView>

</LinearLayout>