<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch"
    android:background="@color/COLOR_WHITE">

    <include
        android:id="@+id/layoutHead"
        layout="@layout/include_head_home" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutHead">

        <com.bili.diushoujuaner.widget.ReboundScrollView
            android:id="@+id/reboundScrollView"
            style="@style/MatchMatch">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/TextLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/BG_F6F6F6"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="left"
                    android:paddingBottom="@dimen/y2"
                    android:paddingLeft="@dimen/x16"
                    android:paddingRight="@dimen/x16"
                    android:paddingTop="@dimen/y2"
                    android:text="☆"
                    android:textColor="@color/TC_ADADBB" />

                <LinearLayout
                    android:id="@+id/layoutNewContact"
                    style="@style/MarginHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y128"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="@dimen/x100"
                        android:layout_height="@dimen/y100"
                        app:placeholderImage="@mipmap/item_contact_new"
                        app:roundAsCircle="true" />

                    <TextView
                        style="@style/TextLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x42"
                        android:text="新的朋友"
                        android:textColor="@color/TC_333333" />

                </LinearLayout>

                <View
                    style="@style/line"
                    android:layout_marginLeft="@dimen/x16"
                    android:layout_marginRight="@dimen/x16" />

                <LinearLayout
                    android:id="@+id/layoutParty"
                    style="@style/MarginHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y128"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="@dimen/x100"
                        android:layout_height="@dimen/y100"
                        app:placeholderImage="@mipmap/item_contact_party"
                        app:roundAsCircle="true" />

                    <TextView
                        style="@style/TextLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x42"
                        android:text="群组"
                        android:textColor="@color/TC_333333" />

                </LinearLayout>

                <com.bili.diushoujuaner.widget.CustomListViewRefresh
                    android:id="@+id/customListViewRefresh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/LC_F6F6F6"
                    android:dividerHeight="@dimen/y2" />

            </LinearLayout>

        </com.bili.diushoujuaner.widget.ReboundScrollView>

        <com.bili.diushoujuaner.widget.SideBarStar
            android:id="@+id/sideBar"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginTop="@dimen/y20" />

    </FrameLayout>

</RelativeLayout>