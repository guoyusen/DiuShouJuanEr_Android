<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cb="http://schemas.android.com/tools"
    android:background="@color/COLOR_WHITE"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/y10"
    android:paddingLeft="@dimen/x24"
    android:paddingRight="@dimen/x24"
    android:paddingTop="@dimen/y10">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivItemHead"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:layout_centerVertical="true"
        app:roundAsCircle="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:layout_marginLeft="@dimen/x24">

            <TextView
                android:id="@+id/itemCommentUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextMiddle"
                android:textColor="@color/TC_5C84DC"
                android:text="三木同学"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/itemCommentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/itemCommentUserName"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/y8"
                style="@style/TextSmall"
                android:textColor="@color/TC_BFBFBF"
                android:text="03-23 12:20"/>

            <LinearLayout
                android:id="@+id/layoutRespon"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y80"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x24">

                <ImageView
                    android:layout_width="@dimen/x32"
                    android:layout_height="@dimen/y32"
                    android:src="@mipmap/icon_comment_press" />

                <TextView
                    style="@style/TextSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="回复"
                    android:textColor="@color/TC_5C84DC" />
            </LinearLayout>

        </RelativeLayout>

        <com.bili.diushoujuaner.widget.aligntextview.AlignTextView
            android:id="@+id/txtCommentContent"
            android:layout_marginTop="@dimen/y6"
            android:layout_marginLeft="@dimen/x24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/TC_2D2D2D"
            cb:align="left"/>

        <ListView
            android:id="@+id/listViewRespon"
            android:layout_marginTop="@dimen/y6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:divider="@null"/>

    </LinearLayout>

</LinearLayout>