<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y128"
    android:background="@color/COLOR_WHITE"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/x24"
    android:paddingRight="@dimen/x24">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivItemHead"
        android:layout_width="@dimen/x96"
        android:layout_height="@dimen/x96"
        android:layout_centerVertical="true"
        app:placeholderImage="@mipmap/shin"
        app:roundAsCircle="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x24">

        <TextView
            android:id="@+id/textItemName"
            android:textSize="@dimen/x30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/y20"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="三木同学"
            android:textColor="@color/TC_040404" />

        <TextView
            android:id="@+id/textItemContent"
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/y24"
            android:layout_marginRight="@dimen/x80"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="就让大雨冲刷记忆中的沙，让我了无牵挂浪迹在天涯"
            android:textColor="@color/TC_8A8A8A" />

        <com.bili.diushoujuaner.widget.badgeview.BGABadgeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:badge_textSize="@dimen/x26"
            app:badge_dragable="true"
            android:layout_marginBottom="@dimen/y22"/>

        <TextView
            android:id="@+id/textItemTime"
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textItemName"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="20:20"
            android:textColor="@color/TC_8A8A8A" />

        <View
            style="@style/line"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>