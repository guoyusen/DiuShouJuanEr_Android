<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch.FitWindow"
    android:background="@mipmap/bg_menu_head">

    <ScrollView
        style="@style/MatchMatch"
        android:layout_above="@+id/layoutBottom"
        android:background="@color/COLOR_WHITE">

        <RelativeLayout style="@style/MatchMatch">

            <View
                android:id="@+id/layoutWall"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y400"
                android:background="@mipmap/bg_menu_head" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/menuHead"
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/y160"
                android:layout_marginLeft="@dimen/x24"
                android:layout_marginTop="@dimen/y320"
                app:placeholderImage="@mipmap/shin"
                app:roundAsCircle="true" />

            <Button
                android:id="@+id/btnFocus"
                style="@style/TextSmall"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/y48"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/menuHead"
                android:layout_marginRight="@dimen/x24"
                android:layout_marginTop="@dimen/x16"
                android:background="@drawable/common_rectangle_solid_green_normal"
                android:text="关注"
                android:textColor="@color/TC_WHITE" />

            <TextView
                android:id="@+id/textContactName"
                style="@style/TextLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/menuHead"
                android:layout_marginLeft="@dimen/x16"
                android:layout_toRightOf="@+id/menuHead"
                android:text="三木同学"
                android:textColor="@color/TC_BLACK" />

            <View
                android:id="@+id/line1"
                style="@style/line"
                android:layout_below="@+id/menuHead"
                android:layout_marginTop="@dimen/y40" />

            <RelativeLayout
                android:id="@+id/layoutAutograph"
                style="@style/MatchWrap.MarginHorizontal"
                android:layout_below="@+id/line1"
                android:paddingBottom="@dimen/y20"
                android:paddingTop="@dimen/y20">

                <TextView
                    style="@style/TextMiddle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个性签名"
                    android:textColor="@color/TC_808080" />

                <TextView
                    style="@style/TextMiddle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x176"
                    android:layout_marginRight="@dimen/x50"
                    android:ellipsize="marquee"
                    android:maxLines="3"
                    android:text="就让大雨冲刷记忆中的沙就让大雨冲刷记忆中的沙,让我了无牵挂浪迹在天涯"
                    android:textColor="@color/TC_333333" />

            </RelativeLayout>

            <View
                android:id="@+id/line2"
                style="@style/line"
                android:layout_below="@+id/layoutAutograph" />

            <RelativeLayout
                android:id="@+id/layoutRecent"
                style="@style/MatchWrap.MarginHorizontal"
                android:layout_below="@+id/line2"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/y20"
                android:paddingTop="@dimen/y20">

                <TextView
                    style="@style/TextMiddle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最近发表"
                    android:textColor="@color/TC_808080" />

                <com.bili.diushoujuaner.widget.CustomGridView
                    android:id="@+id/customGridView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x176"
                    android:layout_marginRight="@dimen/x50"
                    android:numColumns="3">

                </com.bili.diushoujuaner.widget.CustomGridView>

                <TextView
                    style="@style/TextMiddle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x176"
                    android:layout_marginRight="@dimen/x50"
                    android:visibility="gone"
                    android:ellipsize="marquee"
                    android:maxLines="1"
                    android:text="就让大雨冲刷记忆中的沙就让大雨冲刷记忆中的沙,让我了无牵挂浪迹在天涯"
                    android:textColor="@color/TC_808080" />

                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/y50"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_arrow_right_808080" />

            </RelativeLayout>

            <View
                android:id="@+id/line3"
                style="@style/line"
                android:layout_below="@+id/layoutRecent" />

        </RelativeLayout>

    </ScrollView>

    <include
        android:id="@+id/layoutHead"
        layout="@layout/include_head_transparent" />

    <RelativeLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y132"
        android:layout_alignParentBottom="true"
        android:background="@color/COLOR_WHITE">

        <View
            style="@style/line"
            android:layout_alignParentTop="true" />

        <Button
            android:id="@+id/btnStartMsg"
            style="@style/BtnXLongGreen"
            android:layout_centerVertical="true"
            android:text="@string/contact_start_msg" />

    </RelativeLayout>

</RelativeLayout>