<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch.FitWindow"
    android:background="@color/COLOR_WHITE">

    <include android:id="@+id/layoutHead"
        layout="@layout/include_head_custom"/>

    <ListView
        android:id="@+id/listView"
        android:layout_below="@+id/layoutHead"
        android:layout_above="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/x16"
        android:background="@color/BG_ECECEC">

        <EditText
            android:id="@+id/textComment"
            style="@style/TextMiddle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/y72"
            android:layout_marginRight="@dimen/x124"
            android:background="@drawable/common_rectangle_solid_white"
            android:hint="说点什么呗..."
            android:maxLines="6"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:textColor="@color/TC_BLACK"
            android:textColorHint="@color/TC_ADADBB" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="@dimen/y100"
            android:layout_height="@dimen/y72"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/textComment"
            android:text="发送"
            android:textColor="@color/TC_WHITE"
            style="@style/TextMiddle"
            android:background="@drawable/common_rectangle_solid_blue_normal"/>

    </RelativeLayout>


</RelativeLayout>