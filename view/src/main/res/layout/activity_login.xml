<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@mipmap/bg_theme">

    <com.bili.diushoujuaner.widget.scrollview.ReboundScrollView
        style="@style/MatchMatch"
        android:scrollbars="none">

        <LinearLayout
            style="@style/MatchMatch"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/y200"
                android:layout_marginTop="@dimen/y160"
                android:src="@mipmap/logo_default" />

            <LinearLayout
                style="@style/MatchWrap"
                android:layout_marginLeft="@dimen/x60"
                android:layout_marginRight="@dimen/x60"
                android:layout_marginTop="@dimen/y60"
                android:background="@drawable/common_rectangle_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y110"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/x60"
                        android:layout_height="@dimen/y60"
                        android:layout_marginLeft="@dimen/x25"
                        android:src="@mipmap/icon_login_user" />

                    <EditText
                        android:id="@+id/edtMobile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x10"
                        android:background="@null"
                        android:hint="@string/hint_mobile"
                        android:inputType="number"
                        android:maxLength="11"
                        android:textColor="@color/TC_WHITE"
                        android:textColorHint="@color/TC_WHITE_HINT"
                        android:textCursorDrawable="@drawable/common_cursor_white"
                        android:textSize="@dimen/x35"
                        android:textStyle="bold" />

                </LinearLayout>

                <View style="@style/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y110"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/x60"
                        android:layout_height="@dimen/y60"
                        android:layout_marginLeft="@dimen/x25"
                        android:src="@mipmap/icon_login_lock" />

                    <com.bili.diushoujuaner.widget.CustomEditText
                        android:id="@+id/edtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x10"
                        android:background="@null"
                        android:hint="@string/hint_password"
                        android:inputType="textPassword"
                        android:textColor="@color/TC_WHITE"
                        android:textColorHint="@color/TC_WHITE_HINT"
                        android:textCursorDrawable="@drawable/common_cursor_white"
                        android:textSize="@dimen/x35"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnLogin"
                style="@style/BtnLongGreen"
                android:layout_marginTop="@dimen/y80"
                android:text="@string/btn_login" />

            <TextView
                android:id="@+id/txtForgetPsd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/y60"
                android:text="@string/btn_forget"
                android:textColor="@color/TC_WHITE"
                android:textSize="@dimen/x30" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y40"
                android:layout_margin="@dimen/y60"
                android:orientation="horizontal">

                <View
                    style="@style/line"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtRegist"
                    style="@style/TextLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/x24"
                    android:paddingRight="@dimen/x24"
                    android:text="@string/btn_register"
                    android:textColor="@color/TC_WHITE" />

                <View
                    style="@style/line"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </com.bili.diushoujuaner.widget.scrollview.ReboundScrollView>

</RelativeLayout>